<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/normal_spacing"
    android:background="@drawable/rectange_box"
    android:backgroundTint="#F1F6FD"
    android:orientation="horizontal"
    android:padding="@dimen/normal_spacing">

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:src="@drawable/ic_google"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/normal_spacing">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Order Id:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/orderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginRight="150dp"
                android:maxLines="2"
                android:text="46"
                android:textColor="@color/black"
                android:textSize="14sp" />

<!--            <TextView-->

<!--                android:id="@+id/orderId"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:maxLines="2"-->
<!--                android:text="0"-->
<!--                android:textColor="@color/primary"-->
<!--                android:textSize="14sp" />-->

            <ImageView
                android:id="@+id/removeCartIV"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/rectange_box"
                android:rotation="45"
                android:src="@drawable/ic_round_add_24"
                app:tint="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_spacing"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/OrderItemLabelTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:maxLines="2"
                android:text="No. of Items Ordered:"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView

                android:id="@+id/noOfOrderedItemsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppins_regular"
                android:maxLines="2"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_spacing"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/totalPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_spacing"
                android:maxLines="2"
                android:text="200000"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/viewDetailsB"
                android:layout_marginLeft="73dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="View Details"
                />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>


