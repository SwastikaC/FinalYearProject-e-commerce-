<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wishlistLL"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:layout_marginBottom="@dimen/normal_spacing"
    android:background="@drawable/rectange_box"
    android:backgroundTint="#F1F6FD"
    android:orientation="horizontal"
    android:padding="@dimen/normal_spacing">

    <ImageView
        android:id="@+id/wishlistproductIV"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_google"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/normal_spacing">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wishlistproductNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Purple Hoodie"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wishlistoldPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@drawable/strike"
                android:maxLines="2"
                android:text="Rs. 10000"
                android:textColor="@color/priceGray"
                android:textSize="16sp" />

            <TextView

                android:id="@+id/wishlistdiscountPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:maxLines="2"
                android:text="Rs 3000"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:textSize="16sp" />
        </LinearLayout>

