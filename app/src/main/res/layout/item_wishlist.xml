<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wishlistLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/normal_spacing"
    android:background="@drawable/rectange_box"
    android:backgroundTint="#F1F6FD"
    android:orientation="horizontal"
    android:padding="@dimen/normal_spacing">

    <ImageView
        android:id="@+id/productIV"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:src="@drawable/ic_google"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/normal_spacing">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/productNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Purple Hoodie"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />




        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_spacing"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/oldPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@drawable/strike"
                android:maxLines="2"
                android:text="Rs. 10000"
                android:textColor="@color/priceGray"
                android:textSize="13sp" />

            <TextView

                android:id="@+id/discountPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:maxLines="2"
                android:text="Rs 2000"
                android:textColor="@color/primary"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_spacing"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Qty:"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/quantityTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_spacing"
                android:maxLines="2"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_spacing"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/wishlisttrashIV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_trash" />

            <ImageView
                android:id="@+id/addwishlistIV"
                android:layout_width="300dp"
                android:layout_height="500dp"
                android:layout_marginStart="180dp"
                android:background="@drawable/rectange_box"
                android:src="@drawable/ic_shoppingcart"
                app:tint="@color/white" />



    </RelativeLayout>


</LinearLayout>
</LinearLayout>