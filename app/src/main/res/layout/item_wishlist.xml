<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/WishListMainLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_margin="15dp"
    android:background="@drawable/rectange_box"
    android:backgroundTint="#F1F6FD"
    android:orientation="horizontal"
    android:padding="14dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/WishProductIV"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cod" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/normal_spacing">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/WishProductNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:text="New clothes"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView

                android:id="@+id/WishListRemoveIV"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/rectange_box"
                android:rotation="45"
                android:src="@drawable/ic_round_add_24"
                app:tint="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_spacing"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/WishOldPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:foreground="@drawable/strike"
                android:maxLines="2"
                android:text="Rs. 1700"
                android:textColor="@color/priceGray"
                android:textSize="13sp" />

            <TextView

                android:id="@+id/WishDiscountPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppin_semibold"
                android:maxLines="2"
                android:text="Rs 1500"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/WishlistCartLL"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rectange_box"
            android:gravity="start"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/moveToCartIV"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/ic_shoppingcart"
                app:tint="@color/white" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>



